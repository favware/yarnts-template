{
    "compilerOptions": {
        "outDir": "build",
        "rootDir": "src",
        "module": "esnext",
        "lib": ["esnext"],
        "target": "es5",
        "moduleResolution": "node",
        "newLine": "LF",
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": false,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true
    },
    "include": ["src"],
    "typedocOptions": {
      "out": "./docs/",
      "readme": "./README.md",
      "name": "YarnTs Template",
      "exclude": [
        "**/node_modules/**",
        "**/*.test.ts",
        "**/*.js"
      ],
      "mode": "modules",
      "excludeExternals": true,
      "excludePrivate": true,
      "excludeProtected": true,
      "excludeNotExported": true
    }
}