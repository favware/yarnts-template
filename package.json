{
  "name": "@favware/yarnts-template",
  "version": "1.3.1",
  "description": "Template repository for Yarn & TypeScript based libraries",
  "author": "@favware",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "runkitExampleFilename": "dist/example.js",
  "homepage": "https://favware.tech/{{siteurl}}",
  "scripts": {
    "lint": "eslint src __tests__ --ext ts --fix",
    "test": "jest",
    "build": "rollup -c rollup.config.ts",
    "watch": "yarn build -w",
    "docs": "typedoc",
    "commit": "git-cz",
    "cz": "git-cz",
    "up": "yarn upgrade-interactive --latest",
    "docs:serve": "concurrently \"serve docs\" \"open-cli http://localhost:5000\"",
    "prepublishOnly": "yarn build",
    "version": "standard-version",
    "scripts:runner": "ts-node -P tsconfig.eslint.json",
    "scripts:validateNoOnly": "yarn scripts:runner scripts/validateNoOnly"
  },
  "peerDependencies": {},
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@favware/eslint-config": "3.1.5",
    "@favware/ts-config": "^1.1.0",
    "@types/common-tags": "^1.8.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.7",
    "@types/rollup-plugin-progress": "^1.1.0",
    "chalk": "^3.0.0",
    "common-tags": "^1.8.0",
    "concurrently": "^5.0.0",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^6.6.0",
    "glob": "^7.1.6",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "open-cli": "^5.0.0",
    "rollup": "^1.26.4",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript2": "^0.25.2",
    "serve": "^11.2.0",
    "standard-version": "7.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typedoc": "^0.15.0",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^3.7.2"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favware/yarnts-template.git"
  },
  "bugs": {
    "url": "https://github.com/favware/yarnts-template/issues"
  },
  "keywords": [
    "favware",
    "typescript",
    "ts",
    "yarn"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn scripts:validateNoOnly && yarn lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
