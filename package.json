{
  "name": "@favware/yarnts-template",
  "version": "1.3.1",
  "description": "Template repository for Yarn & TypeScript based libraries",
  "author": "@favware",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "runkitExampleFilename": "dist/example.js",
  "homepage": "https://favware.tech/{{siteurl}}",
  "scripts": {
    "lint": "eslint src __tests__ --ext ts --fix",
    "test": "jest",
    "build": "rollup -c rollup.config.ts",
    "watch": "yarn build -w",
    "docs": "typedoc",
    "commit": "git-cz",
    "cz": "git-cz",
    "up": "yarn upgrade-interactive --latest",
    "style": "prettier --write src/**/*.{js,ts}",
    "prepublihOnly": "yarn build",
    "version": "standard-version",
    "scripts:runner": "ts-node -P tsconfig.eslint.json",
    "scripts:validateNoOnly": "yarn scripts:runner scripts/validateNoOnly"
  },
  "peerDependencies": {},
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@favware/eslint-config": "3.3.1",
    "@favware/ts-config": "^1.1.3",
    "@types/common-tags": "^1.8.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.2",
    "@types/rollup-plugin-progress": "^1.1.0",
    "chalk": "^4.0.0",
    "common-tags": "^1.8.0",
    "concurrently": "^5.2.0",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5",
    "rollup": "^2.7.2",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "standard-version": "7.1.0",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.0",
    "typedoc": "^0.17.4",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^3.8.3"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favware/yarnts-template.git"
  },
  "bugs": {
    "url": "https://github.com/favware/yarnts-template/issues"
  },
  "keywords": [
    "favware",
    "typescript",
    "ts",
    "yarn"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn scripts:validateNoOnly && yarn lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --ext js,ts",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "acorn": "^7.1.1",
    "minimist": "^1.2.2",
    "kind-of": "^6.0.3"
  }
}
