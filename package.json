{
  "name": "@favware/yarnts-template",
  "version": "1.3.1",
  "description": "Template repository for Yarn & TypeScript based libraries",
  "author": "@favware",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "runkitExampleFilename": "dist/example.js",
  "homepage": "https://favware.tech/{{siteurl}}",
  "scripts": {
    "test": "jest",
    "lint": "eslint src __tests__ --ext .js,.jsx,.ts,.tsx --fix",
    "prebuild": "yarn lint && yarn test",
    "build": "rollup -c rollup.config.ts",
    "start": "yarn build -w",
    "prepublishOnly": "yarn build && yarn docs",
    "predocs": "yarn docs:clean && yarn lint && yarn docs:build",
    "docs": "jsdoc2md --template ./docs/template.hbs --files ./docsbuild/*.js --example-lang ts --partial ./docs/partials/desc.hbs --partial ./docs/partials/reponame.hbs --partial ./docs/partials/siteurl.hbs > ./README.md",
    "postdocs": "yarn docs:clean",
    "docs:clean": "rimraf ./docsbuild",
    "docs:build": "tsc -p ./tsconfig.docs.json",
    "commit": "git-cz",
    "cz": "git-cz",
    "up": "yarn upgrade-interactive --latest",
    "release:standard": "standard-version",
    "release:push": "git push --follow-tags origin master",
    "release:publish": "npm publish"
  },
  "peerDependencies": {},
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@favware/eslint-config": "3.0.2",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.2",
    "common-tags": "1.8.0",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.2.2",
    "husky": "3.0.4",
    "jest": "24.9.0",
    "jsdoc-to-markdown": "5.0.0",
    "lint-staged": "9.2.5",
    "rimraf": "3.0.0",
    "rollup": "1.20.2",
    "rollup-plugin-cleaner": "1.0.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-copy": "3.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-peer-deps-external": "2.2.0",
    "rollup-plugin-progress": "1.1.1",
    "rollup-plugin-terser": "5.1.1",
    "rollup-plugin-typescript2": "0.23.0",
    "standard-version": "7.0.0",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "typescript": "3.5.3"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favware/yarnts-template.git"
  },
  "bugs": {
    "url": "https://github.com/favware/yarnts-template/issues"
  },
  "keywords": [
    "favware",
    "typescript",
    "ts",
    "yarn"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
