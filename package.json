{
  "name": "@favware/yarnts-template",
  "version": "1.3.1",
  "description": "Template repository for Yarn & TypeScript based libraries",
  "author": "@favware",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "runkitExampleFilename": "dist/example.js",
  "homepage": "https://favware.tech/{{siteurl}}",
  "scripts": {
    "lint": "eslint src __tests__ --ext ts --fix",
    "test": "jest",
    "build": "tsc -b src",
    "watch": "tsc -b src -w",
    "docs": "typedoc",
    "commit": "git-cz",
    "cz": "git-cz",
    "up": "yarn upgrade-interactive --latest",
    "style": "prettier --write src/**/*.{js,ts}",
    "prepublihOnly": "yarn build",
    "sversion": "standard-version"
  },
  "peerDependencies": {},
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@favware/eslint-config": "^5.1.0",
    "@favware/ts-config": "^3.0.2",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "cz-conventional-changelog": "3.2.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-circus": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "standard-version": "8.0.0",
    "ts-jest": "^26.1.1",
    "typedoc": "^0.17.8",
    "typedoc-plugin-nojekyll": "^1.0.1",
    "typescript": "^3.9.6"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favware/yarnts-template.git"
  },
  "bugs": {
    "url": "https://github.com/favware/yarnts-template/issues"
  },
  "keywords": [
    "favware",
    "typescript",
    "ts",
    "yarn"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --ext js,ts",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "acorn": "^7.3.1",
    "minimist": "^1.2.5",
    "kind-of": "^6.0.3"
  }
}
